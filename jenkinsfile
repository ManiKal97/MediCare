pipeline{
agent any 
  
stages{
    stage('Clone Repository')
       {
           steps{
                 git 'https://github.com/ManiKal97/MediCare.git'
                }
        }
    stage('Build Docker Image')
       {
           steps{
                 script {
                  sh '/usr/local/bin/docker build -t medicare .'
                 }
                }
        }
         stage('Run Docker Container')
       {
           steps{
                 script {
                     sh '/usr/local/bin/docker run -p 8090:80 medicare'  
                 }
                }
        }
}

}