pipeline{
agent any 
  
stages{
    stage('Clone Repository')
       {
           steps{
                 git 'https://github.com/ManiKal97/MediCare.git'
                }
        }
    stage('Build Docker Image')
       {
           steps{
                 script {
                  bat 'docker build -t angular-docker:latest .'
                 }
                }
        }
         stage('Run Docker Container')
       {
           steps{
                 script {
                     bat 'docker run -d -p 4201:4200 angular-docker'  
                 }
                }
        }
}

}




